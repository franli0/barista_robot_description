<?xml version="1.0"?>
<robot name="barista_robot">

  <!-- Define colors -->
  <material name="robot_blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>

  <material name="robot_black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="robot_white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <material name="robot_silver">
    <color rgba="0.7 0.7 0.7 1.0"/>
  </material>

  <!-- Base Link (Main Body) - cylinder with dimensions 356mm width, 155mm height -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.178" length="0.155"/>
      </geometry>
      <material name="robot_blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.178" length="0.155"/>
      </geometry>
    </collision>
  </link>

  <!-- Left Wheel - 70.4mm diameter (0.0352m radius) -->
  <link name="left_wheel_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.0352" length="0.0206"/>
      </geometry>
      <material name="robot_black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.0352" length="0.0206"/>
      </geometry>
    </collision>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0.14 -0.0775" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Right Wheel -->
  <link name="right_wheel_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.0352" length="0.0206"/>
      </geometry>
      <material name="robot_black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5707 0 0"/>
      <geometry>
        <cylinder radius="0.0352" length="0.0206"/>
      </geometry>
    </collision>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 -0.14 -0.0775" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Front Caster Wheel -->
  <link name="front_caster_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
      <material name="robot_black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster_link"/>
    <origin xyz="0.12 0 -0.0875" rpy="0 0 0"/>
  </joint>

  <!-- Rear Caster Wheel -->
  <link name="rear_caster_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
      <material name="robot_black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <joint name="rear_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_caster_link"/>
    <origin xyz="-0.12 0 -0.0875" rpy="0 0 0"/>
  </joint>

  <!-- Standoff Rods - 20mm diameter, 220mm height -->
  <!-- Front Left Rod -->
  <link name="front_left_rod_link">
    <inertial>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.22"/>
      </geometry>
      <material name="robot_silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.22"/>
      </geometry>
    </collision>
  </link>

  <joint name="front_left_rod_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_left_rod_link"/>
    <origin xyz="0.03 0.13 0.0775" rpy="0 0 0"/>
  </joint>

  <!-- Front Right Rod -->
  <link name="front_right_rod_link">
    <inertial>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.22"/>
      </geometry>
      <material name="robot_silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.22"/>
      </geometry>
    </collision>
  </link>

  <joint name="front_right_rod_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_right_rod_link"/>
    <origin xyz="0.03 -0.13 0.0775" rpy="0 0 0"/>
  </joint>

  <!-- Rear Left Rod -->
  <link name="rear_left_rod_link">
    <inertial>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.22"/>
      </geometry>
      <material name="robot_silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.22"/>
      </geometry>
    </collision>
  </link>

  <joint name="rear_left_rod_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_left_rod_link"/>
    <origin xyz="-0.03 0.13 0.0775" rpy="0 0 0"/>
  </joint>

  <!-- Rear Right Rod -->
  <link name="rear_right_rod_link">
    <inertial>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.22"/>
      </geometry>
      <material name="robot_silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.11" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.01" length="0.22"/>
      </geometry>
    </collision>
  </link>

  <joint name="rear_right_rod_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_right_rod_link"/>
    <origin xyz="-0.03 -0.13 0.0775" rpy="0 0 0"/>
  </joint>

  <!-- Cup Holder Tray - 320mm width (0.16m radius), 90mm height -->
  <link name="cup_holder_tray_link">
    <inertial>
      <origin xyz="0 0 0.045" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.045" rpy="0 0 0"/>
      <geometry>
        <!-- Create an octagonal tray to match the image better -->
        <cylinder radius="0.16" length="0.09"/>
      </geometry>
      <material name="robot_blue"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.045" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.16" length="0.09"/>
      </geometry>
    </collision>
  </link>

  <joint name="cup_holder_tray_joint" type="fixed">
    <parent link="base_link"/>
    <child link="cup_holder_tray_link"/>
    <origin xyz="0 0 0.2975" rpy="0 0 0"/>
  </joint>

  <!-- Laser Scanner -->
  <link name="laser_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://barista_robot_description/meshes/hokuyo.dae" scale="1 1 1"/>
      </geometry>
      <material name="robot_black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>
  </link>

  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser_link"/>
    <!-- Offset the laser slightly from the center -->
    <origin xyz="0.13 0 0.11" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo-specific elements -->
  <!-- Gazebo colors -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="left_wheel_link">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="right_wheel_link">
    <material>Gazebo/Black</material>
  </gazebo>

  <gazebo reference="front_caster_link">
    <material>Gazebo/Black</material>
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
  </gazebo>

  <gazebo reference="rear_caster_link">
    <material>Gazebo/Black</material>
    <mu1>0.0</mu1>
    <mu2>0.0</mu2>
  </gazebo>

  <gazebo reference="front_left_rod_link">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="front_right_rod_link">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="rear_left_rod_link">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="rear_right_rod_link">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="cup_holder_tray_link">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="laser_link">
    <material>Gazebo/Grey</material>
  </gazebo>

  <!-- Differential drive controller -->
  <gazebo>
    <plugin name="gazebo_ros_diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
      </ros>
      <update_rate>100.0</update_rate>
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.356</wheel_separation>
      <wheel_diameter>0.0704</wheel_diameter>
      <max_wheel_acceleration>1.0</max_wheel_acceleration>
      <max_wheel_torque>20</max_wheel_torque>
      <command_topic>cmd_vel</command_topic>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>false</publish_wheel_tf>
      <odometry_topic>odom</odometry_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
    </plugin>
  </gazebo>

  <!-- Laser controller -->
  <gazebo reference="laser_link">
    <sensor type="ray" name="head_hokuyo_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.570796</min_angle>
            <max_angle>1.570796</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/</namespace>
          <remapping>~/out:=scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>laser_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>